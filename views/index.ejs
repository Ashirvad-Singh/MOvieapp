<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie App</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700|Montserrat:400,700&display=swap">
</head>

<body class="bg-slate-900 font-sans ">

    <!-- Search Form Section -->
    <div class="bg-gray-900 py-8 px-4 sm:px-6 lg:px-8">
        <h1 id="searchh1" class="text-3xl text-center text-white mt-8">Search Your Movie Here</h1>
        <div class="flex justify-center mt-8">
            <form action="/results" method="GET" class="flex">
                <input type="text" name="search" class="form-input w-64 px-4 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:border-blue-500" placeholder="Enter movie name...">
                <button type="submit" class="text-white bg-purple-700 hover:bg-purple-800 focus:outline-none focus:ring-4 focus:ring-purple-300 font-medium rounded-r-md text-md px-5 py-2.5 text-center mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900">Search Movie</button>
            </form>
        </div>
        
    </div>

    <!-- Search Results Section -->
    <div class="bg-gray-900 py-8 px-4 sm:px-6 lg:px-8">
        <h2 id="searchHeading" class="text-3xl text-white mb-4 text-center">Results</h2>

        <div class="flex flex-wrap justify-center">
            <% if (data.results && data.results.length) { %>
                <% data.results.forEach((movie) => { %>
                <div class="max-w-md mx-4 my-4 bg-white shadow-md rounded-lg overflow-hidden">
                    <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%=movie["poster_path"] %>" class="w-full h-auto">
                    <div class="p-4">
                        <h2 class="text-2xl text-gray-900 mb-4">
                            <%= movie["original_title"] %>
                        </h2>
                        <hr class="my-2">
                        <p class="text-gray-700 mb-4">
                            <%= movie["overview"] %>
                        </p>
                        <hr class="my-2">
                        <div class="flex justify-between">
                            <p class="text-gray-700 mb-2"><b>Date Published:</b> <%= movie["release_date"] %></p>
                            <p class="text-gray-700 mb-2"><b>Total Votes:</b> <%= movie["vote_count"] %></p>
                            <p class="text-gray-700 mb-2"><b>Average Rating:</b> <%= movie["vote_average"] %></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <p class="text-gray-700 text-center">No search results found.</p>
            <% } %>
        </div>
    </div>

</body>

</html>
